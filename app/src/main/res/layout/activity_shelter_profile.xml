<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Shelter Information Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <!-- Shelter Name -->
            <TextView
                android:id="@+id/shelterNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shelter Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <!-- Shelter Location -->
            <TextView
                android:id="@+id/shelterLocationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="16sp"
                android:textColor="#555555"
                android:paddingBottom="4dp" />

            <!-- Shelter Username -->
            <TextView
                android:id="@+id/shelterUsernameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="16sp"
                android:textColor="#555555"
                android:paddingBottom="4dp" />

            <!-- Contact Information -->
            <TextView
                android:id="@+id/shelterContactTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact: (123) 456-7890"
                android:textSize="16sp"
                android:textColor="#555555" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Add Dog Button -->
            <Button
                android:id="@+id/addDogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Dog"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- List of Dogs -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Dogs"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <ListView
            android:id="@+id/dogsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:background="#FAFAFA"
            android:layout_marginBottom="16dp" />

        <!-- Add/Edit Dog Layout -->
        <LinearLayout
            android:id="@+id/addDogLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="16dp"
            android:elevation="4dp"
            android:visibility="gone">

            <!-- Dog Image Preview -->
            <ImageView
                android:id="@+id/dogImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder"
                android:layout_marginBottom="8dp"
                android:background="#E0E0E0"
                android:padding="8dp" />

            <!-- Select Image Button -->
            <Button
                android:id="@+id/selectImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Select Image"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF9800"
                android:layout_marginBottom="16dp" />

            <!-- Dog Name Input -->
            <EditText
                android:id="@+id/dogName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dog Name"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="8dp" />

            <!-- Dog Breed Input -->
            <EditText
                android:id="@+id/dogBreed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Breed"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="8dp" />

            <!-- Dog Age Input -->
            <EditText
                android:id="@+id/dogAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="8dp" />

            <!-- Dog Description Input -->
            <EditText
                android:id="@+id/dogDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:background="@drawable/edit_text_bg"
                android:layout_marginBottom="16dp" />

            <!-- Save Dog Button -->
            <Button
                android:id="@+id/saveDogButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
